<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
        <link href="https://cdn.datatables.net/1.10.23/css/dataTables.bootstrap5.min.css" rel="stylesheet" >
        <link href="/css/style.css" rel="stylesheet">
        <title>Fantasy App</title>
    </head>
    <body>
        <%- include('./templates/_header.ejs') %>
        <div class="container-fluid">
            <div class="buttonNavigation">
                <%- include('./templates/_nbaRouteButtons.ejs') %>
            </div>
        </div>
        <div class="container-fluid p-5">
            <h1 class="text-center">
                Player Stats: 
            </h1>
            <div class="row">
                <h3 class="text-center">
                    Season Leaders 
                </h3>
                <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4">
                    <div class="card mt-3 cardFade">
                        <div class="card-body">
                            <h5 class="card-title text-center text-uppercase">Total Points</h5>
                            <div class="col-12 mt-3">
                                <% pointsSeasonLeaders.forEach(leader => { %>
                                    <div class="row justify-content-between mt-3">
                                        <div class="col-10">
                                            <p class="card-text mt-1"><%= leader.player.first_name %> <%= leader.player.last_name %></p>
                                        </div>
                                        <div class="col-2">
                                            <p class="card-text mt-1"><%= leader.pts %></p>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4">
                    <div class="card mt-3 cardFade">
                        <div class="card-body">
                            <h5 class="card-title text-center text-uppercase">Total Rebounds</h5>
                            <div class="col-12 mt-3">
                                <% reboundsSeasonLeaders.forEach(leader => { %>
                                    <div class="row justify-content-between mt-3">
                                        <div class="col-10">
                                            <p class="card-text mt-1"><%= leader.player.first_name %> <%= leader.player.last_name %></p>
                                        </div>
                                        <div class="col-2">
                                            <p class="card-text mt-1"><%= leader.reb %></p>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4">
                    <div class="card mt-3 cardFade">
                        <div class="card-body">
                            <h5 class="card-title text-center text-uppercase">Total Assists</h5>
                            <div class="col-12 mt-3">
                                <% assistsSeasonLeaders.forEach(leader => { %>
                                    <div class="row justify-content-between mt-3">
                                        <div class="col-10">
                                            <p class="card-text mt-1"><%= leader.player.first_name %> <%= leader.player.last_name %></p>
                                        </div>
                                        <div class="col-2">
                                            <p class="card-text mt-1"><%= leader.ast %></p>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4">
                    <div class="card mt-3 cardFade">
                        <div class="card-body">
                            <h5 class="card-title text-center text-uppercase">Total Blocks</h5>
                            <div class="col-12 mt-3">
                                <% blocksSeasonLeaders.forEach(leader => { %>
                                    <div class="row justify-content-between mt-3">
                                        <div class="col-10">
                                            <p class="card-text mt-1"><%= leader.player.first_name %> <%= leader.player.last_name %></p>
                                        </div>
                                        <div class="col-2">
                                            <p class="card-text mt-1"><%= leader.blk %></p>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4">
                    <div class="card mt-3 cardFade">
                        <div class="card-body">
                            <h5 class="card-title text-center text-uppercase">Total Steals</h5>
                            <div class="col-12 mt-3">
                                <% stealsSeasonLeaders.forEach(leader => { %>
                                    <div class="row justify-content-between mt-3">
                                        <div class="col-10">
                                            <p class="card-text mt-1"><%= leader.player.first_name %> <%= leader.player.last_name %></p>
                                        </div>
                                        <div class="col-2">
                                            <p class="card-text mt-1"><%= leader.stl %></p>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4">
                    <div class="card mt-3 cardFade">
                        <div class="card-body">
                            <h5 class="card-title text-center text-uppercase">Total Three Pointers Made</h5>
                            <div class="col-12 mt-3">
                                <% threePointersMadeSeasonLeaders.forEach(leader => { %>
                                    <div class="row justify-content-between mt-3">
                                        <div class="col-10">
                                            <p class="card-text mt-1"><%= leader.player.first_name %> <%= leader.player.last_name %></p>
                                        </div>
                                        <div class="col-2">
                                            <p class="card-text mt-1"><%= leader.fg3m %></p>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <h3 class="text-center">
                Season Averages 
            </h3>
            <div style="display:none" class="seasonAvgTable">
                <table id="seasonAvg" class="table table-hover">
                    <thead>
                      <tr>
                        <th scope="col">Player</th>
                        <th scope="col">Team</th>
                        <th scope="col">GP</th>
                        <th scope="col">PTS</th>
                        <th scope="col">FGM</th>
                        <th scope="col">FGA</th>
                        <th scope="col">FG%</th>
                        <th scope="col">3PM</th>
                        <th scope="col">3PA</th>
                        <th scope="col">3P%</th>
                        <th scope="col">FTM</th>
                        <th scope="col">FTA</th>
                        <th scope="col">FT%</th>
                        <th scope="col">OREB</th>
                        <th scope="col">DREB</th>
                        <th scope="col">REB</th>
                        <th scope="col">AST</th>
                        <th scope="col">TOV</th>
                        <th scope="col">STL</th>
                        <th scope="col">BLK</th>
                        <th scope="col">PF</th>
                      </tr>
                    </thead>
                    <tbody>
                        <% seasonAvg.forEach(avg => { %>
                            <tr>
                                <th scope="row"><%= avg.playerdetails[0].first_name %> <%= avg.playerdetails[0].last_name %></th>
                                <td><%= avg.playerdetails[0].teamAbbreviation %> </td>
                                <td><%= avg.games_played %></td>
                                <td><%= avg.pts %></td>
                                <td><%= avg.fgm %></td>
                                <td><%= avg.fga %></td>
                                <td><%= avg.fg_pct %></td>
                                <td><%= avg.fg3m %></td>
                                <td><%= avg.fg3a %></td>
                                <td><%= avg.fg3_pct %></td>
                                <td><%= avg.ftm %></td>
                                <td><%= avg.fta %></td>
                                <td><%= avg.ft_pct %></td>
                                <td><%= avg.oreb %></td>
                                <td><%= avg.dreb %></td>
                                <td><%= avg.reb %></td>
                                <td><%= avg.ast %></td>
                                <td><%= avg.turnover %></td>
                                <td><%= avg.stl %></td>
                                <td><%= avg.blk %></td>
                                <td><%= avg.pf %></td>
                              </tr>
                        <% }) %>
                    </tbody>
                  </table>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <script src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.10.23/js/dataTables.bootstrap5.min.js"></script>
        <script>
            $(document).ready(function () {
                $('.cardFade').fadeIn(1000);
                
                $('#seasonAvg').DataTable({
                    "order": [[3, 'desc' ]],
                    "initComplete": function(settings, json) {
                        $('.seasonAvgTable').show();
                    }
                });
            });
        </script>
    </body>
</html>