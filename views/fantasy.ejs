<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
        <link href="https://cdn.datatables.net/1.10.23/css/dataTables.bootstrap5.min.css" rel="stylesheet" >
        <link href="/css/style.css" rel="stylesheet">
        <title>Fantasy App</title>
    </head>
    <body>
        <%- include('./templates/_header.ejs') %>
        <div class="container-fluid">
            <div class="buttonNavigation">
                <%- include('./templates/_nbaRouteButtons.ejs') %>
            </div>
        </div>
        <div class="container-fluid">
            <h1 class="text-center">Fantasy Leaders:</h1>
            <div id="multiplierButton">
                <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#multiplierModal">
                    Change Multipliers
                </button>
            </div>
            <div class="modal fade" id="multiplierModal" tabindex="-1" aria-labelledby="multiplierModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="multiplierModalLabel">Multipliers</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form action="#" autocomplete="off">
                                <div class="row justify-content-center">
                                    <div class="col-lg-6 col-xl-6 mt-2">
                                        <label for="formGroupPtsInput">Points:</label>
                                        <input name="ptsText" type="text" class="form-control" id="formGroupPtsInput" placeholder=<%= multipliers.point %> >
                                    </div>
                                    <div class="col-lg-6 col-xl-6 mt-2">
                                        <label for="formGroupRebInput">Rebounds:</label>
                                        <input name="rebText" type="text" class="form-control" id="formGroupRebInput" placeholder=<%= multipliers.reb %>>
                                    </div>
                                    <div class="col-lg-6 col-xl-6 mt-2">
                                        <label for="formGroupAstInput">Assists:</label>
                                        <input name="astText" type="text" class="form-control" id="formGroupAstInput" placeholder=<%= multipliers.ast %>>
                                    </div>
                                    <div class="col-lg-6 col-xl-6 mt-2">
                                        <label for="formGroupBlkInput">Blocks:</label>
                                        <input name="blkText" type="text" class="form-control" id="formGroupBlkInput" placeholder=<%= multipliers.blk %>>
                                    </div>
                                    <div class="col-lg-6 col-xl-6 mt-2">
                                        <label for="formGroupStlInput">Steals:</label>
                                        <input name="stlText" type="text" class="form-control" id="formGroupStlInput" placeholder=<%= multipliers.stl %>>
                                    </div>
                                    <div class="col-lg-6 col-xl-6 mt-2">
                                        <label for="formGroupFgaInput">Field Goals Attempted:</label>
                                        <input name="fgaText" type="text" class="form-control" id="formGroupFgaInput" placeholder=<%= multipliers.fga %>>
                                    </div>
                                    <div class="col-lg-6 col-xl-6 mt-2">
                                        <label for="formGroupFgmInput">Field Goals Made:</label>
                                        <input name="fgmText" type="text" class="form-control" id="formGroupFgmInput" placeholder=<%= multipliers.fgm %>>
                                    </div>
                                    <div class="col-lg-6 col-xl-6 mt-2">
                                        <label for="formGroupFtaInput">Free Throws Attempted:</label>
                                        <input name="ftaText" type="text" class="form-control" id="formGroupFtaInput" placeholder=<%= multipliers.fta %>>
                                    </div>
                                    <div class="col-lg-6 col-xl-6 mt-2">
                                        <label for="formGroupFtmInput">Free Throws Made:</label>
                                        <input name="ftmText" type="text" class="form-control" id="formGroupFtmInput" placeholder=<%= multipliers.ftm %>>
                                    </div>
                                    <div class="col-lg-6 col-xl-6 mt-2">
                                        <label for="formGroup3pmInput">3 Pointers Made:</label>
                                        <input name="3pmText" type="text" class="form-control" id="formGroup3pmInput" placeholder=<%= multipliers.fg3m %>>
                                    </div>
                                    <div class="col-lg-6 col-xl-6 mt-2">
                                        <label for="formGroupTovInput">Turnover:</label>
                                        <input name="tovText" type="text" class="form-control" id="formGroupTovInput" placeholder=<%= multipliers.tov %>>
                                    </div>
                                    <div class="col-lg-6 col-xl-6 mt-2">
                                        <label for="formGroupDdInput">Double Double:</label>
                                        <input name="ddText" type="text" class="form-control" id="formGroupDdInput" placeholder=<%= multipliers.dd %>>
                                    </div>
                                    <div class="col-lg-6 col-xl-6 mt-2">
                                        <label for="formGroupTdInput">Triple Double:</label>
                                        <input name="tdText" type="text" class="form-control" id="formGroupTdInput" placeholder=<%= multipliers.td %>>
                                    </div>
                                    <div class="col-lg-12 col-xl-12 mt-3 text-center">
                                        <button type="submit" class="btn btn-secondary">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid p-5">
            <div style="display:none" class="fantasyTable">
                <table id="fantasy" class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">NAME</th>
                            <th scope="col">TEAM</th>
                            <th scope="col">POS</th>
                            <th scope="col">PTS</th>
                            <th scope="col">REB</th>
                            <th scope="col">AST</th>
                            <th scope="col">BLK</th>
                            <th scope="col">STL</th>
                            <th scope="col">FGA</th>
                            <th scope="col">FGM</th>
                            <th scope="col">FTA</th>
                            <th scope="col">FTM</th>
                            <th scope="col">3PM</th>
                            <th scope="col">TOV</th>
                            <th scope="col">DD</th>
                            <th scope="col">TD</th>
                            <th scope="col">FPTS</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% fantasyLeaders.forEach(leader => { %>
                            <tr>
                                <th scope="row"><img class="table-headshots" src="/images/headshots/260x190/<%= leader.image_name %>"><%= leader.full_name %></th>
                                <td><%= leader.team %></td>
                                <td><%= leader.position %></td>
                                <td><%= leader.pts %></td>
                                <td><%= leader.reb %></td>
                                <td><%= leader.ast %></td>
                                <td><%= leader.blk %></td>
                                <td><%= leader.stl %></td>
                                <td><%= leader.fga %></td>
                                <td><%= leader.fgm %></td>
                                <td><%= leader.fta %></td>
                                <td><%= leader.ftm %></td>
                                <td><%= leader.fg3m %></td>
                                <td><%= leader.tov %></td>
                                <td><%= leader.dd %></td>
                                <td><%= leader.td %></td>
                                <td style="font-weight: bolder"><%= leader.fpts %></td>
                              </tr>
                        <% }) %>
                    </tbody>
                  </table>
            </div>
        </div>
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>
        <script src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.10.23/js/dataTables.bootstrap5.min.js"></script>
        <script>
            $(document).ready(function () {
                const table = $('#fantasy').DataTable({
                    "order": [[16, 'desc' ]],
                    "pageLength": 50,
                    "initComplete": function(settings, json) {
                        $('.fantasyTable').show();
                    }
                });
            });
        </script>
    </body>
</html>